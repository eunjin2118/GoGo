<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayGoTemple">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/temple_logo"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="160dp"
                android:layout_width="85dp"
                android:layout_height="85dp"/>

                <Button
                    android:id="@+id/btn_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진로"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    style="?android:borderlessButtonStyle"/>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/user_img"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.046"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="꼬꼬빼빼"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.086"
                        app:layout_constraintStart_toEndOf="@+id/user_img"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/post_kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="학교생활"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.082"
                        app:layout_constraintStart_toEndOf="@+id/user_img"
                        app:layout_constraintTop_toBottomOf="@+id/user_id" />

                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="교복 관련 질문 드립니다"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/user_img" />

                    <TextView
                        android:id="@+id/post_story"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="아침에 체육복 입고 등교해도 되나여??\n아니면 학교와서 갈아입어야 되나여???"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/post_title"
                        app:layout_constraintTop_toBottomOf="@+id/post_title"
                        app:layout_constraintVertical_bias="0.246" />

                    <Button
                        android:id="@+id/heart_btn"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="공감"
                        android:textColor="#FF0000"
                        android:backgroundTint="#D8D8D8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.052"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/post_story" />

                    <Button
                        android:id="@+id/comment_btn"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#D8D8D8"
                        android:text="댓글"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.627"
                        app:layout_constraintStart_toEndOf="@+id/heart_btn"
                        app:layout_constraintTop_toBottomOf="@+id/post_story" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공모전"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    style="?android:borderlessButtonStyle"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/post_box2"/>

                <Button
                    android:id="@+id/btn_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학교생활"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    style="?android:borderlessButtonStyle"/>

            <ImageView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/post_box2"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>